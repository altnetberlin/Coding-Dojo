<UserControl x:Class="Pacman.Views.HighScoreView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:cal="http://www.caliburnproject.org" mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Loaded="OnLoaded" Focusable="True">
    <Grid>
        <Border VerticalAlignment="Top" HorizontalAlignment="Center" Width="200" Margin="0,20,0,0" BorderBrush="Black" BorderThickness="1,1,1,1">
            <TextBlock Name="Score" TextAlignment="Center"/>
        </Border>
        <TextBlock Text="Press any key to continue ..." VerticalAlignment="Bottom" TextAlignment="Center" Margin="0,0,0,20"/>
    </Grid>

</UserControl>
